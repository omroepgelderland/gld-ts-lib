{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "bundler",
    "declaration": true,
    "strict": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "rewriteRelativeImportExtensions": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/"]
}
